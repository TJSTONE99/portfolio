{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended", "next/core-web-vitals"],
  "plugins": ["@typescript-eslint"],
  "rules": {
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "indent": ["error", 2],
      "no-multi-spaces": ["error"],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": ["error"]
  }  
}
